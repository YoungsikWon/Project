<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="clientMapper">
<!-- 프로젝트 -->
	<select id="cli_select" parameterType="String" resultType="map">
		<!-- 셀렉문 작성 -->
		SELECT * FROM SIGNUP
	</select>
	<select id="SelectTest" resultType="map" parameterType="String">
		select S_EMAIL, S_ID, S_PW
		from SIGNUP
		where S_EMAIL = 'a@gmail.com'
			and S_ID = 'ABC'
			and S_PW = '124'
		<if test="S_PW != null"> <!-- if 태그에서 조건 분기 -->
			and S_PW = #{S_PW}
		</if>
	</select>
</mapper>